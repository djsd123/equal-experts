{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2021",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
